<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="CENTER" spacing="20.0" styleClass="side-bar" stylesheets="@../stylesheet/stylesheet.css">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/icon.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button accessibleRole="IMAGE_VIEW" mnemonicParsing="false" onAction="#switchToMain" prefHeight="50.0" prefWidth="170.0" stylesheets="@../stylesheet/stylesheet.css" text="Trang chủ" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchToEvent" prefHeight="50.0" prefWidth="170.0" text="Sự kiện" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchToFig" prefHeight="50.0" prefWidth="170.0" text="Nhân vật lịch sử" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchToEra" prefHeight="50.0" prefWidth="170.0" text="Triều đại" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchToFes" prefHeight="50.0" prefWidth="170.0" text="Lễ hội" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchToSite" prefHeight="50.0" prefWidth="170.0" text="Di tích" />
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#switchToAboutUs" prefHeight="50.0" prefWidth="170.0" text="Về chúng tôi" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="30.0" top="10.0" />
         </padding>
      </VBox>
      <HBox alignment="CENTER_LEFT" prefHeight="590.0" prefWidth="58.0" styleClass="river-bar" stylesheets="@../stylesheet/stylesheet.css" />
   </children>
</HBox>
